<div>
    <span {{bind-attr class=":toggle-icon node.isLeaf:leaf:"}} {{action toggle}}>
        {{#if isExpanded}}
            &#x25BC;
        {{else}}
            &#x25B6;
        {{/if}}
    </span>

    {{#if node.hasCheckbox}}
        {{input type="checkbox" checked=node.selected}}
    {{/if}}

    <span {{action toggle}} {{bind-attr draggable=node.draggable}}>
        {{node.label}}
    </span>
</div>

{{#if isExpanded}}
    {{tree-branch node=node selection=selection expansion=expansion}}
{{/if}}