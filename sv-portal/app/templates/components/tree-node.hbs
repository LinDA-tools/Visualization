{{#if node.draggable}}
  <div draggable="true">   
		<span {{bind-attr class=":toggle-icon node.children.length::leaf"}} {{action toggle}}>
			{{#if isExpanded}}
				&#x25BC;
			{{else}}
				&#x25B6;
			{{/if}}
		</span>
	{{node.draggable.label}}
   </div>	  
{{else}}
	<div>  
		<span {{bind-attr class=":toggle-icon node.children.length::leaf"}} {{action toggle}}>
			{{#if isExpanded}}
				&#x25BC;
			{{else}}
				&#x25B6;
			{{/if}}
		</span>
    {{node.label}} 
	</div>
{{/if}}
    
{{#if isExpanded}}
    {{tree-branch node=node}}
{{/if}}
       