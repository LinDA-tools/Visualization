<div class="col-xs-6 area-box">
    <h6>{{label}}</h6>
    {{#droppable-area inArea=content}}
        <div style="height:7rem; overflow:auto; text-align: left; ">
            {{#each areaItem in view.inArea}}
                {{property-item item=areaItem collection=view.inArea}}	
            {{else}}
                <div style="color:#888888; font-size:14pt; text-align: center">Drop here</div>
            {{/each}}
        </div>
    {{/droppable-area}}
</div>
