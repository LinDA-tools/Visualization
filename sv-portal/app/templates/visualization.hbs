<dl>
    <dd class="datasource">
        <h6>Select visualization</h6>
        <ul>
                {{#each tool in controller}}
                <li>
                    <a {{action 'configure' tool}}>
                        {{tool.name}}
                </a>
            </li>
            {{/each}}
        </ul>
    </dd>

    <dd>
        <h6>Configure visualization</h6>
        <div>
            {{view App.ContainerView elementId="optionsView"}}
            {{#if isSelected}}
                <a {{action 'draw'}}>draw</a>
            {{/if}}
        </div>
    </dd>
</dl>
    
<div id="visualization" style="width: 600px; height: 400px;"></div>

